@model IEnumerable<Shop_dotNet.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
    <title>Nghiện bóng VCL - Trang Chủ </title>

<div id="page-content">
    <!--Home slider-->
    <div class="slideshow slideshow-wrapper pb-section sliderFull">
        <div class="home-slideshow">
            <div class="slide">
                <div class="blur-up lazyload bg-size">
                    <img class="blur-up lazyload bg-img" src="//theme.hstatic.net/200000580329/1000937158/14/slide_1_img.jpg?v=85" alt="Shop Our New Collection" title="Những Bộ Sưu Tập Mới" />
                    <div class="slideshow__text-wrap slideshow__overlay classic bottom">
                        <div class="slideshow__text-content bottom">
                            <div class="wrap-caption center">
                                <h2 class="h1 mega-title slideshow__title">Những Bộ Sưu Tập Mới Của Chúng Tôi</h2>
                                <a href=@Url.Action("Catelogy", "Product") class="btn"><span >Mua Ngay</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slide">
                <div class="blur-up lazyload bg-size">
                    <img class="blur-up lazyload bg-img" src="//theme.hstatic.net/200000580329/1000937158/14/slide_4_mb.jpg?v=85" alt="Summer Bikini Collection" title="Summer Bikini Collection" />
                    <div class="slideshow__text-wrap slideshow__overlay classic bottom">
                        <div class="slideshow__text-content bottom">
                            <div class="wrap-caption center">
                                <h2 class="h1 mega-title slideshow__title">Bộ sưu tập giày chính hãng</h2>
                                <span class="btn">Mua Ngay</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Home slider-->
    <!--Collection Tab slider-->
    <div class="tab-slider-product section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="section-header text-center">
                        <h2 class="h2">Những sản phẩm mới</h2>
                        <p>Xem qua những sản phẩm của chúng tôi</p>
                    </div>
                    <div class="tabs-listing">
                        <ul class="tabs clearfix">
                            <li class="active" rel="tab1">Sản Phẩm</li>
                        </ul>
                        <div class="tab_container">
                            <div id="tab1" class="tab_content grid-products">
                                <div class="productSlider">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-12 item">
                                            <!-- start product image -->
                                            <div class="product-image">
                                                <!-- start product image -->
                                                <a href=@Url.Action("ProductAccordion","Product",new { id = item.id })>
                                                    <!-- image -->
                                                    <img class="primary blur-up lazyload" src="/Areas/Admin/Assets/products/@item.img" alt="image" title="">
                                                    <!-- End image -->
                                                    <!-- Hover image -->
                                                    <img class="hover blur-up lazyload" src="/Areas/Admin/Assets/products/@item.img" alt="image" title="product">

                                                    <!-- End hover image -->

                                                </a>
                                                <!-- end product image -->
                                                <!-- countdown start -->
                                                <div class="saleTime desktop" data-countdown="2023/09/01"></div>
                                                
                                            </div>
                                            <!-- end product image -->
                                            <!--start product details -->
                                            <div class="product-details text-center">
                                                <!-- product name -->
                                                <div class="product-name">
                                                    <a href=@Url.Action("ProductAccordion","Product",new { id = item.id })>@item.name</a>
                                                </div>
                                                <!-- End product name -->
                                                <!-- product price -->
                                                <div class="product-price">
                                                    <span class="price">@(double.Parse(item.price+"").ToString("#,###", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ) VND</span>
                                                </div>
                                                <!-- End product price -->
                                                <!-- Variant -->
                                                <!-- End Variant -->
                                            </div>
                                            <!-- End product details -->
                                        </div>
                                    }

                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Collection Tab slider-->
    <!--Collection Box slider-->
    
    <!--End Collection Box slider-->
    <!--Logo Slider-->
    
    <!--End Logo Slider-->
    <!--Featured Product-->
    
    <!--End Featured Product-->
    <!--Latest Blog-->
    <!--End Latest Blog-->
    <!--Store Feature-->
    <div class="store-feature section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="display-table store-info">
                        <li class="display-table-cell">
                            <i class="icon anm anm-truck-l"></i>
                            <h5>Vận Chuyển &amp; Hoàn Trả</h5>
                            <span class="sub-text">Miễn Phí Vận Chuyển Đơn Hàng Trên 10000K</span>
                        </li>
                        <li class="display-table-cell">
                            <i class="icon anm anm-dollar-sign-r"></i>
                            <h5>Đổi trả</h5>
                            <span class="sub-text">Được Phép Đổi Trả Trong Vòng 30 ngày</span>
                        </li>
                        <li class="display-table-cell">
                            <i class="icon anm anm-comments-l"></i>
                            <h5>Online Support</h5>
                            <span class="sub-text">Chúng tôi hỗ trợ 24/7</span>
                        </li>
                        <li class="display-table-cell">
                            <i class="icon anm anm-credit-card-front-r"></i>
                            <h5>Bảo Mật Thanh Toán</h5>
                            <span class="sub-text">Tất cả các khoản thanh toán đều an toàn và đáng tin cậy.</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--End Store Feature-->
</div>